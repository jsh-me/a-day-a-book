<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainViewModel"
            type="com.aday.abook.feature.main.MainViewModel" />
        <variable
            name="view"
            type="android.view.View" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/brown1">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/main"
        android:visibility="@{mainViewModel.isSave ? view.VISIBLE : view.INVISIBLE }"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:onClick="@{() -> mainViewModel.saveButtonClicked()}"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButton" />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_thumb_bar"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="30dp"
        android:background="@drawable/ic_icon_progress_bar"
        app:layout_constraintBottom_toTopOf="@+id/bookCoverImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageButton
        android:id="@+id/bookCoverImage"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@drawable/ic_green_addbook"
        android:onClick="@{() -> mainViewModel.addBookClicked()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bookCoverImage"
        app:layout_constraintStart_toEndOf="@+id/bookCoverImage"
        app:layout_constraintTop_toTopOf="@+id/bookCoverImage"
        android:background="@drawable/ic_next_icon" />

    <ImageButton
        android:id="@+id/previousButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bookCoverImage"
        app:layout_constraintEnd_toStartOf="@+id/bookCoverImage"
        app:layout_constraintTop_toTopOf="@+id/bookCoverImage"
        android:background="@drawable/ic_previous_icon" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/main"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookCoverImage" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintStart_toEndOf="@+id/previousButton"
        app:layout_constraintTop_toBottomOf="@+id/bookName" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_pen"
        android:onClick="@{() -> mainViewModel.saveFiveWordsButtonClicked()}"
        app:layout_constraintBottom_toBottomOf="@+id/fiveWords"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/fiveWords" />


    <EditText
        android:id="@+id/fiveWords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/underline_skin_color"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:hint="5글자로 책을 설명해봐!"
        android:textSize="16sp"
        android:maxLength="5"
        android:enabled="@{mainViewModel.isFocusableText ? true : false }"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <ImageButton
        android:id="@+id/addWordButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_add_button"
        android:onClick="@{() -> mainViewModel.fixWordClicked()}"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    <ImageButton
        android:id="@+id/detailButton"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_memo_button_brown"
        android:onClick="@{() -> mainViewModel.detailClicked()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
